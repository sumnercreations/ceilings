  "version": "0.2.0",
  "configurations": [
    // from https://stackoverflow.com/questions/36494938/debug-run-angular2-typescript-with-visual-studio-code
    {
      "name": "Launch localhost with sourcemaps",
      "type": "chrome",
      "request": "launch",
      "url": "https://dev-ng.3-form.com:4200",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      }
    }
  ]
}
